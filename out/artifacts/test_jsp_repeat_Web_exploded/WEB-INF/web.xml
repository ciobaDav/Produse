<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--    SERVLET DECLARATION        -->
    <servlet>
        <servlet-name>employeesListServlet</servlet-name>
        <servlet-class>edu.step.servlet.EmployeeListServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>addEmployeeServlet</servlet-name>
        <servlet-class>edu.step.servlet.AddEmployeeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>editEmployeeServlet</servlet-name>
        <servlet-class>edu.step.servlet.EditEmployeeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>deleteEmployeeServlet</servlet-name>
        <servlet-class>edu.step.servlet.DeleteEmployeeServlet</servlet-class>
    </servlet>

    <!--    SERVLET MAPPING     -->
    <servlet-mapping>
        <servlet-name>employeesListServlet</servlet-name>
        <url-pattern>/employees</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>addEmployeeServlet</servlet-name>
        <url-pattern>/new-employee</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>editEmployeeServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>deleteEmployeeServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
</web-app>